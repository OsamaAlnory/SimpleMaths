<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleMaths.UI.ImagedButton" Padding="0" IsClippedToBounds="True"
       BackgroundColor="Transparent">
    <ContentView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <AbsoluteLayout>
            <Button x:Name="button" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1"/>
            <Image AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.1,0,0.2,1"
                   x:Name="img" Margin="5,5,5,5"/>
        </AbsoluteLayout>
    </ContentView>
</Frame>